<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.societydetails">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/societyname1"
        android:layout_width="315dp"
        android:layout_height="75dp"
        android:layout_marginTop="70dp"
        android:textColorHint="@android:color/background_dark"
        app:errorTextAppearance="@android:color/background_light"
        app:errorTextColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <EditText
            android:id="@+id/societyname2"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:hint="Society Name"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"
            android:typeface="sans" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/area1"
        android:layout_width="315dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@android:color/background_dark"
        app:errorTextAppearance="@android:color/background_light"
        app:errorTextColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/pincode1"
        app:layout_constraintStart_toStartOf="@+id/house1"
        app:layout_constraintTop_toBottomOf="@+id/house1">

        <EditText
            android:id="@+id/area2"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:hint="Area"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"
            android:typeface="sans" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pincode1"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:textColorHint="@android:color/background_dark"
        app:errorTextAppearance="@android:color/background_light"
        app:errorTextColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/house1"
        app:layout_constraintEnd_toEndOf="@+id/societyname1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/house1"
        app:layout_constraintTop_toTopOf="@+id/house1"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/pincode2"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:hint="Pincode"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"
            android:typeface="sans" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/house1"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@android:color/background_dark"
        app:errorTextAppearance="@android:color/background_light"
        app:errorTextColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/societyname1"
        app:layout_constraintTop_toBottomOf="@+id/societyname1">

        <EditText
            android:id="@+id/house2"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:hint="House No."
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"
            android:typeface="sans" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/city1"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@android:color/background_dark"
        app:errorTextAppearance="@android:color/background_light"
        app:errorTextColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="@+id/area1"
        app:layout_constraintTop_toBottomOf="@+id/area1">

        <EditText
            android:id="@+id/city2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:hint="City"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:typeface="sans" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/state1"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:textColorHint="@android:color/background_dark"
        app:errorTextAppearance="@android:color/background_light"
        app:errorTextColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/city1"
        app:layout_constraintEnd_toEndOf="@+id/area1"
        app:layout_constraintTop_toTopOf="@+id/city1">

        <EditText
            android:id="@+id/state2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:hint="State"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:typeface="sans" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_secondary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/contact_to_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Society Details"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="14dp" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/savebtn"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:background="@drawable/rectangle3"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state1" />



</androidx.constraintlayout.widget.ConstraintLayout>